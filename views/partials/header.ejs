<body>
    <div class="ui right vertical teal inverted sidebar labeled icon menu">
        <% if (currUser) { %>
        <a class="item">
            Welcome back,
            <p><%=currUser.username%>!</p>
        </a>
        <% } %>
        <a href="/" class="item">
            <i class="home icon"></i>
            Home
        </a>
        <a href="/blogs/new" class="item">
            <i class="write square icon"></i>
            New Post
        </a>
        <% if (currUser) { %>
        <a href="/logout" class="red item">
            <i class="sign out icon"></i>
            Log out
        </a>
        <% } else { %>
        <a href="/login" class="violet item">
            <i class="sign in icon"></i>
            Log in
        </a>
        <a href="/register" class="green item">
            <i class="add user icon"></i>
            Sign up
        </a>
        <% } %>
    </div>

    <div class="ui fixed mobile teal inverted main menu">
        <div class="header item">
            <a href="/blogs"><i class="code icon"></i>BLOG</a>
        </div>
        <div class="right menu">
            <a class="menu open item">
                <i class="user circle outline icon"></i>
            </a>
        </div>
    </div>

    <div class="ui fixed desktop teal inverted main menu">
        <div class="ui container">
            <div class="header item">
                <a href="/blogs"><i class="code icon"></i>BLOG</a>
            </div>
            <a href="/" class="grey item">Home</a>
            <a href="/blogs/new" class="blue item">New Post</a>
            <div class="right menu">
                <% if (currUser) { %>
                    <a class="item">Welcome back, <%=currUser.username%>!</a>
                    <a href="/logout" class="red item">Log out <i class="sign out icon"></i></a>
                <% } else { %>
                    <a href="/login" class="violet item">Log in <i class="sign in icon"></i></a>
                    <a href="/register" class="green item">Sign up <i class="add user icon"></i></a>
                <% } %>
            </div>
        </div>
    </div>

    <div class="pusher">
        <div id="flash" class="ui container">
            <% if (error && error.length > 0) {%>
            <div class="ui negative mini message">
                <i class="close icon"></i>
                <div class="header"><%= error %></div>
            </div>
            <% } %>
            <% if (success && success.length > 0) {%>
            <div class="ui positive mini message">
                <i class="close icon"></i>
                <div class="header"><%= success %></div>
            </div>
            <% } %>
        </div>
