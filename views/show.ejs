<% include partials/header %>
<div class="ui container main text segment">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <div class="content">
                <span>
                    <em>Updated at: <%=blog.updatedDate.toLocaleString('en-US')%></em>
                </span>
            </div>
            <div class="ui hidden divider"></div>
            <img class="ui centered rounded middle image" src="<%=blog.image%>" >
            <div class="ui hidden divider"></div>
            <div class="description">
                <p><%-blog.body%></p>
            </div>
            <div class="ui hidden divider"></div>

            <form onsubmit="return confirmForm();" id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui negative right floated button">Delete</button>
            </form>
            <a class="ui blue button right floated " href="/blogs/<%=blog._id%>/edit">
                Update
            </a>
            <div class="ui hidden divider"></div>
        </div>
    </div>
</div>

<% include partials/footer %>