<% include partials/header %>
<div class="ui main text container">
    <div class="ui huge header">
        Edit Blog
    </div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="required field">
            <label>Title</label>
            <input type="text" placeholder="title" value="<%=blog.title%>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" placeholder="image url" value="<%=blog.image%>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog</label>
            <textarea name="blog[body]" id="editor" cols="30" rows="10"><%=blog.body%></textarea>
        </div>
        <button class="ui violet basic big button">Submit!</button>
    </form>
</div>


<% include partials/footer %>